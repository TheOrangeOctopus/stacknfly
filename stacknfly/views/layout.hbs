  {{/if}}

  <br><br>

  <button>Login</button>
  <br>
  <a href="http://www.google.com/"><button > Login with google</button></a>
  </div>

    <a href="/auth/signup">Signup</a>
    
  </nav>

  {{{body}}}


  <script src='/javascripts/sortable.min.js'></script>
    <script src="/javascripts/script.js"></script>
</body>
</html>